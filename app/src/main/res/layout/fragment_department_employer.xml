<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragments.DepartmentEmployerFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Департаменты-сотрудники"
            android:textSize="20sp"
            android:layout_marginEnd="7dp"/>

        <Button
            android:id="@+id/addDepartmentEmpl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#6D71FE"
            android:textColor="#402945"
            android:text="Добавить связь"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewDE"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        android:layout_marginBottom="50dp"/>

</LinearLayout>

</FrameLayout>